{
  // General normalizations.
  "files.encoding": "utf8",
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.rulers": [80, 100],

  // Auto format on save (requires recommended extensions).
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": { "source.organizeImports": "always" },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[shellscript]": { "editor.defaultFormatter": "foxundermoon.shell-format" },
  "[properties]": { "editor.defaultFormatter": "foxundermoon.shell-format" },
  "[ignore]": { "editor.defaultFormatter": "foxundermoon.shell-format" },
  "[dart]": { "editor.defaultFormatter": "Dart-Code.dart-code" },

  "files.associations": {
    ".metadata": "yaml",
    "pubspec.lock": "yaml"
  },

  "explorer.fileNesting.patterns": {
    "pubspec.yaml": "pubspec.lock, .metadata",
    "*.dart": "${capture}.*.g.dart"
  },

  // Code spell checker (requires recommended extensions).
  "cSpell.ignorePaths": [
    ".git",
    ".dart_tool",
    "build",
    ".metadata",
    "pubspec.lock"
  ],
  "cSpell.words": [
    "affe",
    "combinators",
    "esbenp",
    "foxundermoon",
    "futureor",
    "interps",
    "ints",
    "nonobvious",
    "pubspec",
    "swiftpm",
    "symbolication",
    "tamasfe",
    "tearoffs",
    "unawaited"
  ]
}
